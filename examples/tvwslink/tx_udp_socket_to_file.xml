<?xml version="1.0" encoding="utf-8" ?> 

<softwareradio name="Radio1">

  <engine name="phyengine1" class="phyengine">

    <component name="udpsocketrx1" class="udpsocketrx">
      <parameter name="port" value="1234"/>
      <parameter name="bufferSize" value="1316"/>
      <parameter name="outputType" value="uint8_t"/>
      <port name="output1" class="output"/>
    </component>
	
    <component name="filerawwriter1" class="filerawwriter">
      <parameter name="filename" value="socketout_udp.txt"/>
      <port name="input1" class="input"/>
    </component>

  </engine>

  <link source="udpsocketrx1.output1" sink="filerawwriter1.input1" />

</softwareradio>
